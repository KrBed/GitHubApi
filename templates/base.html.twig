            {#
            {#        </form> #}
            {%  if app.user%}
                <span class="mr-5 text-light">Witaj {{ app.user.username }} </span>
                <a href ="{{ path('logout') }}" class="btn btn-secondary my-2 my-sm-0">Wyloguj</a>
            {% else %}
                <a href ="{{ path('connect_github_start') }}" class="btn btn-secondary my-2 my-sm-0">Zaloguj</a>
            {% endif %}

        </div>
    </nav>
{% endblock %}

    <main role="main" class="container pt-2">
